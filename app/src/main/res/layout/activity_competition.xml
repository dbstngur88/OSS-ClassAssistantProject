<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:background="#7FFFD4"
        android:orientation="vertical">

        <ImageView
            android:layout_width="125dp"
            android:layout_height="125dp"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:src="@drawable/sunmoon" />

        <TextView
            android:id="@+id/textField"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="#7FFFD4"
            android:gravity="center"
            android:text="과목 별 경쟁률 확인"
            android:textColor="#FF6347"
            android:textSize="24sp"
            android:textStyle="bold" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="10dp"
        android:orientation="vertical">

        <Switch
            android:id="@+id/SchSwitch"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="과목 / 교수 스위치" />

        <Space
            android:layout_width="match_parent"
            android:layout_height="20dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/Sch"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="5dp"
                android:layout_weight="1"
                android:background="@drawable/style_leftbutton"
                android:gravity="center"
                android:text="과 목 검 색"
                android:textColor="#FF6347" />


            <EditText
                android:id="@+id/SchSubField"
                android:layout_width="239dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:ems="10"
                android:hint="과목명을 입력하세요"
                android:inputType="textPersonName" />

            <ImageButton
                android:id="@+id/SearchBtn"
                android:layout_width="70dp"
                android:layout_height="match_parent"
                android:layout_marginRight="10dp"
                android:background="@drawable/style_rightbutton"
                android:src="@drawable/ic_baseline_search_24" />
        </LinearLayout>

        <Space
            android:layout_width="wrap_content"
            android:layout_height="10dp" />

        <Button
            android:id="@+id/ActivateBtn"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:layout_marginLeft="0dp"
            android:background="@drawable/style_button"
            android:text="검색 결과 적용"
            android:textColor="#FF6347"
            android:textSize="15dp"
            android:textStyle="bold" />

        <Space
            android:layout_width="match_parent"
            android:layout_height="10dp" />

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:stretchColumns="0,1"
            android:layout_marginTop="10dp">


            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/textView3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="과 목 명"
                    android:textSize="20sp"
                    android:textColor="#FF6347"
                    android:background="@drawable/style_login"/>

                <TextView
                    android:id="@+id/textView4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="교 수"
                    android:textSize="20sp"
                    android:textColor="#FF6347"
                    android:background="@drawable/style_login"/>

            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/SubNameView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:textSize="20sp"
                    android:background="@drawable/cell_shape" />

                <TextView
                    android:id="@+id/SubProfessorView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:textSize="20sp"
                    android:layout_marginBottom="30dp"
                    android:background="@drawable/cell_shape" />
            </TableRow>

        </TableLayout>

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:stretchColumns="0,1,2">


        <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent">

            <TextView
                android:id="@+id/textView5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="수 강 총 원"
                android:textSize="20sp"
                android:textColor="#FF6347"
                android:background="@drawable/style_login"/>

            <TextView
                android:id="@+id/textView6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="신 청 인 원"
                android:textSize="20sp"
                android:textColor="#FF6347"
                android:background="@drawable/style_login" />

            <TextView
                android:id="@+id/textView7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="경 쟁 률"
                android:textSize="20sp"
                android:textColor="#FF6347"
                android:background="@drawable/style_login" />
        </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent" >

                <TextView
                    android:id="@+id/SubPersonalView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:textSize="20sp"
                    android:background="@drawable/cell_shape"/>

                <TextView
                    android:id="@+id/SubOccupancyView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:textSize="20sp"
                    android:background="@drawable/cell_shape"/>

                <TextView
                    android:id="@+id/SubRateView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="20dp"
                    android:background="@drawable/cell_shape"
                    android:gravity="center"
                    android:textSize="20sp" />
            </TableRow>

        </TableLayout>


        <Button
            android:id="@+id/GoBackBtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center|center_horizontal"
            android:background="@drawable/style_login"
            android:text="돌 아 가 기"
            android:textSize="20sp"
            android:textColor="#FF6347"
            android:layout_marginTop="25dp"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="45dp"
            android:layout_marginRight="45dp"/>
        <!--android:text="돌 아 가 기\n(임시)경쟁률 테이블에 데이터 추가"
            경쟁률 데이터만 추가 필요시 text내용을 해당 코드와 변경해 사용-->

        <Button
            android:id="@+id/GoEvaluationBtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center|center_horizontal"
            android:background="@drawable/style_pw"
            android:text="한 줄 평 \t 보 러 가 기"
            android:textSize="20sp"
            android:textColor="#FF6347"
            android:layout_marginLeft="45dp"
            android:layout_marginRight="45dp"/>
    </LinearLayout>

</LinearLayout>